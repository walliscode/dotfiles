#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '

# set environment variables
export EDITOR=nvim
export VISUAL=nvim

# set path variables
export PATH=/opt/cmake/bin:$PATH
export PATH="$PATH:/opt/nvim-linux-x86_64/bin"
